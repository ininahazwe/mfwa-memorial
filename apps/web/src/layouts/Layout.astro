---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Hommage aux journalistes disparus en Afrique de l'Ouest" />
    <meta name="theme-color" content="#0a0a0a" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Mapbox CSS -->
    <link href="https://api.mapbox.com/mapbox-gl-js/v3.6.0/mapbox-gl.css" rel="stylesheet" />
    
    <title>{title}</title>
  </head>
  
  <body class="min-h-screen overflow-hidden">
    <!-- Contenu de la page -->
    <slot />
    
    <!-- Bougie mémorielle (coin inférieur droit) -->
    <div class="fixed bottom-6 right-6 w-7 h-14 z-50" aria-hidden="true">
      <!-- Flamme animée -->
      <div class="absolute bottom-6 left-1/2 -translate-x-1/2 w-3 h-7 rounded-full bg-gradient-to-t from-accent via-amber-300 to-transparent blur-[2px] animate-pulse"></div>
      <!-- Corps de la bougie -->
      <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-2.5 h-7 bg-gradient-to-r from-neutral-800 via-neutral-700 to-neutral-800 rounded-sm"></div>
    </div>
  </body>
</html>
